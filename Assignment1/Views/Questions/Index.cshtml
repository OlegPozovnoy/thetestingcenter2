@model IEnumerable<Assignment1.Models.Question>

@{
    ViewBag.Title = "Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Questions list</h2>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Test.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionType.QuestionType1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Test.author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionNumber)
            </th>
            @if (Request.IsAuthenticated)
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Test.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionType.QuestionType1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Test.author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionNumber)
                </td>
                <td>
                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id });
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
